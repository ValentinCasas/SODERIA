  script.
    $(document).ready(function() {
      $('form').submit(function(e) {
        e.preventDefault(); // Evita el envío normal del formulario

        var formData = new FormData(this);

        $.ajax({
          url: '/foro/agregar',
          method: 'POST',
          data: formData,
          processData: false,
          contentType: false,
          success: function(response) {
            swal({
              icon: 'success',
              title: 'En espera',
              text: 'La pregunta se encuentra en proceso de aceptación',
              timer: 3000,
              timerProgressBar: true
            });
          }
        });
      });
    });











