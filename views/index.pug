extends layout

block content

  head 

    title Inicio

    link(rel='stylesheet' href='/index.css')
    script(src="/index.js" defer)

    link(rel='stylesheet' href='/carrito-compras.css')
    link(rel='stylesheet' href='/whatsapp.css')
    script(src="/carrito-compras.js" defer)


  body  


    div.inicio


    main
      div
        span catalogo
        h1 Torres aquaman
        hr
        p Disfruta de un agua sumamente refrescante y sin cloro!
        a(href="#") ver productos

      div.swiper
        div.swiper-wrapper
          each producto in Productos
            div(class=`swiper-slide swiper-slide--${producto.id}`, style=`box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.5); background: url('${producto.imagenUrl}') no-repeat 50% 50% / contain;`)
              div
                h2= producto.nombre
                p= producto.descripcion
                a(href="#" target="_blank") información

        // Add Pagination
        div.swiper-pagination


    section#foro
      .titulo.mb-5.d-flex.justify-content-center
        h2 PREGUNTAS FRECUENTES
      .container.contain-preguntas
        each pregunta in Foro
          .pregunta
            details
              summary(class="bg-white p-2 rounded")= pregunta.pregunta
              p(class="respuesta") #{pregunta.Usuario.nombreCompleto}: #{pregunta.respuesta}
      form.form(action="/foro/agregar" method="post").container.form-foro.d-flex.mt-3
        input.input-foro.form-control(type="text" name="foro" placeholder="Ingrese su duda (anonimo)", required)
        button.btn.btn-primary.btn-foro(type="submit") Enviar





    section.carrito.p-lg-5.p-2
      .titulo.mb-5.mt-5.d-flex.justify-content-center
        h2 HACE TU PEDIDO
      .row
        each producto in Productos
          .col-lg-3.col-md-4.col-sm-6.col-12.d-flex.justify-content-center
            .card.m-2(id=`producto-${producto.id}`)
              img.card-img-top(src=`/${producto.imagenUrl}`, alt="Imagen del producto")
              .card-body
                h5.card-title.title #{producto.nombre}
                p.card-text.descripcion #{producto.descripcion}
                p.card-text.precio $#{producto.precioVenta}
                button.btn.btn-primary.agregar(data-producto-id=producto.id onclick="agregarAlCarrito(this)") Agregar al carrito


    //nav
    div.nav.d-flex.justify-content-between.align-items-center.p-2
      .contain-btn-empleado
        a(href="auth/view/login").cta
          span Soy empleado
          svg(viewBox="0 0 13 10" height="10px" width="15px")
            path(d="M1,5 L11,5")
            polyline(points="8 1 12 5 8 9")

      a.cart-icon(data-toggle="modal" data-target="#carritoModal")
        span#totalItems 0

      div.modal#carritoModal.p-2
        form.modal-dialog(action="/comprar" method="POST")
          .modal-content
            .modal-header
              h5.modal-title Mi carrito
              span.total-suma
            .modal-body
              ul.cart
            .modal-footer
              input.form-control(type="text" name="nombre" placeholder="Nombre del comprador" required)
              input.form-control(type="text" name="contacto" placeholder="Teléfono/Correo electrónico" required)
              input.form-control(type="text" name="metodoPago" placeholder="Método de pago" required)
              button.btn.btn-primary(ids="generarObjetoBtn" type="submit") Hacer pedido
              button.btn.btn-secondary.cerrar(type="button" data-dismiss="modal") Cerrar



    section.algo

    a(href="whatsapp://send?phone=2665018537")
